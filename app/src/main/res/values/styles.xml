<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BtnStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_margin">15sp</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="android:colorActivatedHighlight">@color/blue</item>
    </style>

   <!-- <style name="MyTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@android:color/black</item>
    </style>-->
    <style name="text_apperence" parent="@android:style/TextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:color">@color/blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:colorControlHighlight">@color/blue</item>
        <item name="android:colorActivatedHighlight">@color/blue</item>

    </style>

</resources>
